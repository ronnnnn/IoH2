<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.lifeistech.com.ioh.Start3Activity"
    android:background="#81D4FA">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:layout_margin="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#90A4AE">

            <TextView
                android:text="質問"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_light"
                android:layout_margin="10dp" />

            <TextView
                android:text="内山　史也"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:gravity="center_horizontal"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:text="うちやま　ふみや　2-A 7番"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:gravity="center_horizontal" />

            <TextView
                android:text="電話(SMS)　09012030715"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp" />

            <TextView
                android:text="メール　tomomisafumi238＠gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp" />

            <TextView
                android:text="電話の場合、出られない場合があるので、メールで質問して頂けると助かります。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textSize="16sp"
                android:textColor="?android:attr/colorBackground"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:text="完了"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:background="#FBC02D"
                android:textColor="#FFFFFF"
                android:onClick="ok"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
